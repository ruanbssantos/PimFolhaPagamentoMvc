@{
    Layout = null; // Define que esta página não usará um layout
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    @await Html.PartialAsync("_HeadContent")
</head>
<body>


	<script src="~/js/Login/Index.js" asp-append-version="true"></script>

	<style>
		.div_fundoLogin {
			background: rgb(34,34,34);
			background: linear-gradient(140deg, rgba(34,34,34,1) 0%, rgba(52,52,52,1) 50%, rgba(52,52,52,1) 100%);
			/* background: url(../../imagens/jpg/conexaoG2L-fundoLogin_cinza.jpg); */
			background-size: cover;
			width: 100vw;
			height: 100vh;
			display: flex;
			/* justify-content: center; */
			align-items: center;
			min-height: 600px;
			overflow-y: auto;
		}

		.borderRadius11px {
			border-radius: 11px;
		}

		.padding50px {
			padding: 50px !important;
		}

		.boxShadow {
			box-shadow: 0 0.15rem 1.75rem 0 #dcdcdc26 !important;
		}

		.input_form {
			background-color: transparent;
			width: 100%;
			border: none;
			border-bottom: 1px solid #ccc;
			color: white;
			display: block;
			height: calc(1.5em + 0.75rem + 2px);
			padding: 0.375rem 0.75rem;
			font-size: 1rem;
			border-radius: 0px !important;
		}

		.input_form:focus {
			border: 0;
			border-bottom: 2px solid white;
			box-shadow: 0 1px 0 0 rgba(0,0,0,.175) !important;
			outline: 0;
			border-radius: 0;
		}

		.input_form::placeholder {
			color: #ffffff; /* Substitua pela cor desejada em formato hexadecimal, RGB ou nome da cor */
		}

		.has-error.input_form {
			border-bottom-color: #f58281 !important;
		}

		.has-error.input_form:focus {
			border-bottom-color: #f58281 !important;
			-webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 6px #f58281 !important;
			box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 6px #f58281 !important;
		}

		#container-login {
			/* From https://css.glass */
			background: rgba(255, 255, 255, 0) !important;
			border-radius: 16px;
			box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1) !important;
			backdrop-filter: blur(5px) !important;
			-webkit-backdrop-filter: blur(5px)!important;
			border: 1px solid rgba(255, 255, 255, 0.3) !important;
			color: white;
		}

	</style>
	<div class="div_fundoLogin">
		<div class="row w-100 no-gutters d-flex justify-content-center">
			<div class="col-11 col-sm-7 col-md-6 col-lg-5 col-xl-4 bg-white boxShadow padding50px borderRadius11px" id="container-login">
				 

				<div class="row m-0 mb-4">
					<div class="col-12 d-flex justify-content-center" style="background:#222222;border-radius:11px">
						<img src="~/_images/png/logo-semFundo.png" style="height:50px" />
					</div>
				</div>

				<form method="post" name="frm_login" id="frm_login" onkeypress="javascript: fcn_verificaEnter(event);" autocomplete="off">
					<input type="hidden" name="hdn_operacao" value="" /> 

					<div class="row m-0">
						<div class="col-12 mb-3">
							<div class="form-group">
								<label for="txt_email" class="obgMark">E-mail</label>
								<input type="text" class="input_form obg" name="txt_email" id="txt_email" />
							</div>
						</div>

						<div class="col-12 mb-3">
							<div class="form-group">
								<label for="txt_cpf" class="obgMark">CPF</label>
								<input type="text" class="input_form obg campoNumerico" name="txt_cpf" id="txt_cpf" maxlength="15" />
							</div>
						</div>
						 
						<div class="col-12 my-3 text-center">
							<input type="button" class="btn btn-success" name="btn_gravar" id="btn_gravar" value="Entrar" title="Entrar" />
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>


	<script src="~/js/jquery.mask.js"></script>

	<script>
		const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
		const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
	</script> 
</body>
</html>
